<%- include("partials/header") -%> 

<h1>✒️Home</h1>
<p><%= homeStartingContent %> </p>
<% posts.forEach((post)=>{ %>
    <% if (post.title) { %>
    <h1>▪️ <%=  post.title %> 
        <form class="delete-post" action="/delete" method="post">
            <input type="hidden" name="blog_to_be_deleted" value="<%=post.title%>" placeholder="Blog Title">
            <button class="btn" type="submit">🗑️</button>
        </form>
    </h1>
    <% if (post.body && post.body.length>=100) { %>
        <p><%= post.body.substring(0,100)+" ..." %>
            <a href="/posts/<%= post.title %> " >Read more</a>
        </p>
    <% } else{ %>
        <p><%= post.body %> </p>
    <% } %> 
    <% } %>
<% }) %>

<div class="compose-posts-div">
    <button class="btn btn-primary"><a href="/compose" class="compose-button">Compose a new blog</a></button>
    <br>
</div>

